<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xml="http://www.w3.org/XML/1998/namespace" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_0.xsd ">

	<!-- 서블릿 클래스 등록 -->
	<servlet>
		<servlet-name>my</servlet-name>
		<servlet-class>
			com.siri.servlet.MyServlet
		</servlet-class>
	</servlet>
	<!-- 가상의 경로 설정(서블릿 클래스에 매핑될 가상의 경로)-->
	<servlet-mapping> 
		<servlet-name>my</servlet-name>
		<url-pattern>/dark/my</url-pattern>
		<!-- url - pattern 엘리먼트 내의  맨 앞의 '/'는 (컨텍스트) 루트를 의미! -->
	</servlet-mapping>
</web-app>
